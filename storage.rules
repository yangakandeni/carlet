rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Only authenticated users can upload
    // Photos are stored in reports/{reportId}/{filename}
    match /reports/{reportId}/{filename} {
      // Anyone can read report photos (public feed)
      allow read: if true;
      
      // Only authenticated users can upload photos
      // Limit file size to 10MB and only allow images
      allow create: if request.auth != null 
                    && request.resource.size < 10 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
      
      // No updates or deletes allowed (reports are immutable once created)
      allow update, delete: if false;
    }
    
    // User profile photos in users/{userId}/profile.jpg
    match /users/{userId}/{filename} {
      // Anyone can read profile photos
      allow read: if true;
      
      // Only the user can upload/update their own profile photo
      allow create, update: if request.auth != null
                            && request.auth.uid == userId
                            && request.resource.size < 5 * 1024 * 1024
                            && request.resource.contentType.matches('image/.*');
      
      // Only the user can delete their own profile photo
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
